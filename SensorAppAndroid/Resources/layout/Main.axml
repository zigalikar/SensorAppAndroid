<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp">
<!-- Accelerometer layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Accelerometer" />
    <TextView
        android:id="@+id/accel_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="false"
        android:maxLines="3"
        android:text="X: 0 Y: 0 Z: 0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/accel_lastUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Last updated: 0s ago"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />
<!-- GPS layout -->
    <TextView
        android:layout_width="fill_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/loc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="false"
        android:maxLines="2"
        android:text="Longitude: 0 Latitude: 0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/loc_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Provider: null"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/loc_lastUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Last updated: 0s ago"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp" />
<!-- Orientation -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Orientation"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/orientation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:maxLines="3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="X: 0 Y: 0 Z: 0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />
    <TextView
        android:id="@+id/orientation_lastUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="Last updated: 0s ago"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp" />
</LinearLayout>